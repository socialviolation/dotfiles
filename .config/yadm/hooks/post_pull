#!/bin/bash

# Remove dotfiles-specific files from home after yadm checkout
# This prevents these files from cluttering other projects

if [ -f "$HOME/.claude/commands/merge.md" ]; then
    echo "ðŸ§¹ Removing dotfiles-specific Claude command: merge"
    rm -f "$HOME/.claude/commands/merge.md"
fi

if [ -f "$HOME/.claude/commands/sync.md" ]; then
    echo "ðŸ§¹ Removing dotfiles-specific Claude command: sync"
    rm -f "$HOME/.claude/commands/sync.md"
fi

if [ -f "$HOME/sync" ]; then
    echo "ðŸ§¹ Removing dotfiles sync script from home"
    rm -f "$HOME/sync"
fi
