
#Set true colour
set-option -sa terminal-overrides ",xterm*:Tc"
# Continuum
# set -g @continuum-restore 'on'
# set -g @continuum-save-interval '1'

# Mouse support
set -g mouse on

# Start windows and panes at 1, not 0
set -g base-index 1
set -g pane-base-index 1
set-window-option -g pane-base-index 1
set-option -g renumber-windows on

# Automatic window naming: disabled to preserve manual window names
set-option -g automatic-rename off
set-option -g automatic-rename-format '#{?#{||:#{==:#{pane_current_command},zsh},#{==:#{pane_current_command},bash}},#{b:pane_current_path},#{pane_current_command}}'
set-option -g allow-rename off
set-option -g status-interval 1

# Show pane titles in border
set -g pane-border-status top
set -g pane-border-format " #P: #{?#{==:#{pane_current_command},zsh},#{b:pane_current_path},#{pane_current_command}} "

# Pane border colors - matrix green for active, dim for inactive
set -g pane-active-border-style fg='#03A062'

# tmux-session-manager
bind-key x kill-pane # skip "kill-pane 1? (y/n)" prompt
set -g detach-on-destroy off  # don't exit from tmux when closing a session

# Set prefix
unbind C-b
set -g prefix C-Space
bind C-Space send-prefix

# Disable prefix arrow key pane navigation
unbind Up
unbind Down
unbind Left
unbind Right

# Shift Alt vim keys to switch windows
bind -n M-H previous-window
bind -n M-L next-window

# Theme configuration (must be before loading catppuccin)
set -g @catppuccin_flavor "mocha" # latte, frappe, macchiato, or mocha
set -g @catppuccin_window_status_style "rounded" # basic, rounded, slanted, custom, or none

# Override catppuccin window format: show process or directory
set -g @catppuccin_window_current_text "#{?#{||:#{==:#{pane_current_command},zsh},#{==:#{pane_current_command},bash}},#{b:pane_current_path},#{pane_current_command}}"
set -g @catppuccin_window_default_text "#{?#{||:#{==:#{pane_current_command},zsh},#{==:#{pane_current_command},bash}},#{b:pane_current_path},#{pane_current_command}}"
set -g @catppuccin_window_default_fill "theme"
set -g @catppuccin_window_current_fill "theme"

# Configure which modules to show in status bar
set -g @catppuccin_status_modules_right "application session"
set -g @catppuccin_status_modules_left ""

# Plugins
#https://github.com/tmux-plugins/tpm
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'christoomey/vim-tmux-navigator'
set -g @plugin 'catppuccin/tmux'

# Load catppuccin theme (must be after plugin declaration, before tpm load)
run ~/.tmux/plugins/tmux/catppuccin.tmux

# Manually set window formats (workaround for catppuccin not setting them)
set -g window-status-format "#[fg=#89b4fa,bg=#313244]#[fg=#1e1e2e,bg=#89b4fa,bold] #I #[fg=#cdd6f4,bg=#313244,nobold]  #{?#{||:#{==:#{pane_current_command},zsh},#{==:#{pane_current_command},bash}},#{b:pane_current_path},#{pane_current_command}} #[fg=#313244,bg=#1e1e2e]"
set -g window-status-current-format "#[fg=#fab387,bg=#313244]#[fg=#1e1e2e,bg=#fab387,bold] #I #[fg=#cdd6f4,bg=#313244,nobold]  #{?#{||:#{==:#{pane_current_command},zsh},#{==:#{pane_current_command},bash}},#{b:pane_current_path},#{pane_current_command}} #[fg=#313244,bg=#1e1e2e]"

set -g @plugin 'tmux-plugins/tmux-yank'
set -g @plugin 'joshmedeski/t-smart-tmux-session-manager'

set -g @plugin 'tmux-plugins/tmux-resurrect'
set -g @plugin 'tmux-plugins/tmux-continuum'
set -g @continuum-restore 'on'
# set vi-mode
set-window-option -g mode-keys vi
# keybindings
bind-key -T copy-mode-vi v send-keys -X begin-selection
bind-key -T copy-mode-vi C-v send-keys -X rectangle-toggle
bind-key -T copy-mode-vi y send-keys -X copy-select-and-cancel
bind '"' split-window -h -c "${pane_current_path}"
bind % split-window -v -c "${pane_current_path}"


